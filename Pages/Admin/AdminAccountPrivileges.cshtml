    <style>
        /* Account Privileges Panel Styles */
        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;

        }

        body {
            background-color: #f8f9fa;
        }

        .dashboard-wrapper {
            display: flex;
            min-height: 100vh;
        }

        .main-content {
            flex: 1;
            padding: 25px;
            background-color: #f8f9fa;
        }

        .panel-container {
            background-color: #fff;
            border-radius: 15px;
            box-shadow: 0 10px 30px rgba(0, 0, 0, 0.08);
            margin: 10px;
            overflow: hidden;
            transition: all 0.3s ease;
            border: 1px solid rgba(0, 0, 0, 0.04);
        }

        .panel-header {
            padding: 25px 30px;
            border-bottom: 1px solid #f0f0f0;
            background: linear-gradient(135deg, #f8f9fa, #ffffff);
        }

            .panel-header h1 {
                font-size: 26px;
                font-weight: 600;
                color: #2c3e50;
                letter-spacing: 0.3px;
            }

        .panel-body {
            display: flex;
        }

        .users-list {
            width: 280px;
            border-right: 1px solid #f0f0f0;
            background-color: #fafbfc;
            overflow-y: auto;
            max-height: 80vh;
        }

        .users-header {
            padding: 25px 20px 15px;
            font-weight: 600;
            font-size: 18px;
            color: #3a4a5a;
            letter-spacing: 0.5px;
        }

        .search-box {
            padding: 0 20px 20px;
        }

            .search-box input {
                width: 100%;
                padding: 12px 15px;
                border: 1px solid #e1e5e9;
                border-radius: 8px;
                font-size: 14px;
                background-color: #ffffff;
                box-shadow: 0 2px 5px rgba(0, 0, 0, 0.02);
                transition: all 0.3s;
            }

                .search-box input:focus {
                    outline: none;
                    border-color: #d3b78d;
                    box-shadow: 0 0 0 3px rgba(211, 183, 141, 0.2);
                }

        .user-item {
            padding: 16px 20px;
            border-bottom: 1px solid #f0f0f0;
            cursor: pointer;
            transition: all 0.2s ease;
            position: relative;
        }

            .user-item:hover {
                background-color: rgba(211, 183, 141, 0.1);
            }

            .user-item.active {
                background-color: rgba(211, 183, 141, 0.2);
                border-left: 4px solid #d3b78d;
            }

            .user-item h3 {
                font-size: 16px;
                margin-bottom: 5px;
                color: #3a4a5a;
                font-weight: 500;
            }

            .user-item p {
                font-size: 13px;
                color: #6c757d;
            }

        .user-details {
            flex: 1;
            padding: 30px;
            background: linear-gradient(145deg, #ffffff, #fcfcfc);
        }

        .user-header {
            margin-bottom: 30px;
            padding-bottom: 20px;
            border-bottom: 1px solid #f2f2f2;
        }

            .user-header h2 {
                font-size: 28px;
                margin-bottom: 8px;
                color: #2c3e50;
                font-weight: 600;
            }

            .user-header p {
                font-size: 15px;
                color: #6c757d;
                letter-spacing: 0.3px;
            }

        .privilege-options {
            margin-top: 25px;
        }

        .privilege-option {
            padding: 20px 25px;
            border: 1px solid #e9ecef;
            border-radius: 10px;
            margin-bottom: 20px;
            background-color: #ffffff;
            transition: all 0.3s ease;
            box-shadow: 0 3px 10px rgba(0, 0, 0, 0.03);
        }

            .privilege-option:hover {
                transform: translateY(-2px);
                box-shadow: 0 8px 15px rgba(0, 0, 0, 0.05);
                border-color: #d3b78d;
            }

            .privilege-option label {
                display: flex;
                align-items: center;
                font-size: 16px;
                color: #3a4a5a;
                font-weight: 500;
                cursor: pointer;
            }

            .privilege-option input[type="checkbox"] {
                -webkit-appearance: none;
                appearance: none;
                width: 22px;
                height: 22px;
                border: 2px solid #d3b78d;
                border-radius: 5px;
                margin-right: 12px;
                display: grid;
                place-content: center;
                cursor: pointer;
                transition: all 0.2s ease;
            }

                .privilege-option input[type="checkbox"]::before {
                    content: "";
                    width: 12px;
                    height: 12px;
                    transform: scale(0);
                    transition: 120ms transform ease-in-out;
                    background-color: #d3b78d;
                    transform-origin: center;
                    border-radius: 2px;
                    clip-path: polygon(14% 44%, 0 65%, 50% 100%, 100% 16%, 80% 0%, 43% 62%);
                }

                .privilege-option input[type="checkbox"]:checked::before {
                    transform: scale(1);
                }

                .privilege-option input[type="checkbox"]:focus {
                    outline: 2px solid rgba(211, 183, 141, 0.3);
                }

        .action-buttons {
            display: flex;
            justify-content: flex-end;
            margin-top: 40px;
        }

        .btn {
            padding: 12px 28px;
            border-radius: 8px;
            font-size: 16px;
            font-weight: 500;
            cursor: pointer;
            border: none;
            transition: all 0.3s ease;
            letter-spacing: 0.5px;
        }

        .btn-cancel {
            background-color: #e9ecef;
            color: #495057;
            margin-right: 15px;
        }

            .btn-cancel:hover {
                background-color: #dee2e6;
                transform: translateY(-2px);
            }

        .btn-save {
            background: linear-gradient(135deg, #d3b78d, #c9a97c);
            color: #fff;
            box-shadow: 0 4px 10px rgba(211, 183, 141, 0.3);
        }

            .btn-save:hover {
                background: linear-gradient(135deg, #c9a97c, #bf9d69);
                transform: translateY(-2px);
                box-shadow: 0 6px 15px rgba(211, 183, 141, 0.4);
            }

     
        
    </style>
</head>
