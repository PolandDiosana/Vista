        }

        .reservation-info {
            display: flex;
            flex-direction: column;
        }

        .facility-name {
            font-weight: 500;
            color: var(--text-dark);
            margin-bottom: 4px;
        }

        .facility-time {
            font-size: 12px;
            color: var(--text-light);
        }

        .status-badge {
            display: inline-block;
