        <script>
        document.addEventListener("DOMContentLoaded", function () {
            const sections = document.querySelectorAll("section, div[id], footer");
            const navLinks = document.querySelectorAll(".nav-item a");

            function changeActiveNav() {
                let scrollPosition = window.scrollY + window.innerHeight / 2; // Adjust offset dynamically

                let activeSection = null;

                sections.forEach((section) => {
                    let sectionTop = section.offsetTop;
                    let sectionBottom = sectionTop + section.offsetHeight;

                    if (scrollPosition >= sectionTop && scrollPosition < sectionBottom) {
                        activeSection = section.id;
                    }
                });

                // If near the bottom, force "Contact" to be active
                if (window.innerHeight + window.scrollY >= document.body.scrollHeight - 50) {
                    activeSection = "footer-section";
                }

                // Update active class
                navLinks.forEach((link) => {
                    link.classList.remove("active");
                    if (link.getAttribute("href") === `#${activeSection}`) {
                        link.classList.add("active");
                    }
                });
            }

            window.addEventListener("scroll", changeActiveNav);
            changeActiveNav(); // Run on load
        });
    </script>

