    <!-- Add SweetAlert JS -->
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    <script>
        // Document ready function
        document.addEventListener('DOMContentLoaded', function() {
            // Set minimum date for scheduling to today
            const today = new Date().toISOString().split('T')[0];
            document.getElementById('schedule-date').min = today;

            // File attachment display
            document.getElementById('file-attachment').addEventListener('change', function(e) {
                const fileName = e.target.files[0] ? e.target.files[0].name : 'No file chosen';
                document.getElementById('file-name').textContent = fileName;
            });

            // Tab filtering functionality
            const tabs = document.querySelectorAll('.tab');
            tabs.forEach(tab => {
                tab.addEventListener('click', () => {
                    tabs.forEach(t => t.classList.remove('active'));
                    tab.classList.add('active');

                    const filter = tab.dataset.filter;
                    const announcements = document.querySelectorAll('.announcement');

                    announcements.forEach(announcement => {
                        // Reset all announcements
                        announcement.classList.remove('hidden');
                        announcement.classList.remove('highlighted');
                        announcement.classList.remove('filtered');

                        if (filter === 'all') {
                            // Show all announcements
                            return;
                        } else if (filter === 'urgent') {
                            // For urgent filter, show all but highlight urgent ones
                            if (announcement.dataset.category === 'urgent') {
                                announcement.classList.add('highlighted');
                            } else {
                                announcement.classList.add('filtered');
                            }
                        } else {
                            // For other filters, hide non-matching announcements
                            if (announcement.dataset.category !== filter) {
                                announcement.classList.add('hidden');
                            }
                        }
                    });
                });
            });

            // Search functionality
            const searchInput = document.getElementById('announcement-search');
            searchInput.addEventListener('input', function() {
                const searchTerm = this.value.toLowerCase();
                const announcements = document.querySelectorAll('.announcement');

                announcements.forEach(announcement => {
                    const title = announcement.querySelector('h3').textContent.toLowerCase();
                    const content = announcement.querySelector('.announcement-content').textContent.toLowerCase();

                    if (title.includes(searchTerm) || content.includes(searchTerm)) {
                        announcement.classList.remove('hidden');
                    } else {
                        announcement.classList.add('hidden');
                    }
                });
            });

            // Schedule functionality
            const scheduleOption = document.getElementById('schedule-option');
            const scheduleContainer = document.getElementById('schedule-container');
            const scheduleClose = document.getElementById('schedule-close');
            const scheduleCancel = document.getElementById('schedule-cancel');
            const scheduleSave = document.getElementById('schedule-save');
            const scheduledIndicator = document.getElementById('scheduled-indicator');
            const scheduledDateDisplay = document.getElementById('scheduled-date-display');

            scheduleOption.addEventListener('click', function(e) {
                e.stopPropagation();
                scheduleContainer.classList.toggle('active');
            });

            scheduleClose.addEventListener('click', function(e) {
                e.stopPropagation();
                scheduleContainer.classList.remove('active');
            });

            scheduleCancel.addEventListener('click', function(e) {
                e.stopPropagation();
                scheduleContainer.classList.remove('active');
            });

            scheduleSave.addEventListener('click', function(e) {
                e.stopPropagation();
                const date = document.getElementById('schedule-date').value;
                const time = document.getElementById('schedule-time').value;

                if (date && time) {
                    const formattedDate = new Date(`${date}T${time}`).toLocaleString();
                    scheduledDateDisplay.textContent = formattedDate;
                    scheduledIndicator.classList.add('active');
                    scheduleContainer.classList.remove('active');
                }
            });

            // Close schedule container when clicking outside
            document.addEventListener('click', function() {
                scheduleContainer.classList.remove('active');
            });

            // Read more functionality
            const readMoreButtons = document.querySelectorAll('.read-more');
            const announcementModal = document.getElementById('announcement-modal');
            const modalClose = document.getElementById('modal-close');
            const modalCloseBtn = document.getElementById('modal-close-btn');
            const modalTitle = document.getElementById('modal-announcement-title');
            const modalContent = document.getElementById('modal-announcement-content');

            readMoreButtons.forEach(button => {
                button.addEventListener('click', function() {
                    const announcement = this.closest('.announcement');
                    const title = announcement.querySelector('h3').textContent;
                    const content = announcement.querySelector('.announcement-content').innerHTML;
                    const metaItems = announcement.querySelectorAll('.meta-item');
                    const author = announcement.querySelector('.author-info').cloneNode(true);
                    const attachments = announcement.querySelector('.announcement-attachments').cloneNode(true);

                    // Build modal content
                    modalTitle.textContent = title;

                    let modalHtml = `
                        <div class="modal-meta">
                            ${Array.from(metaItems).map(item => item.outerHTML).join('')}
                        </div>
                        <div class="modal-author">
                            ${author.outerHTML}
                        </div>
                        <div class="modal-content">
                            ${content}
                        </div>
                        <div class="modal-attachments">
                            <h4>Attachments</h4>
                            ${attachments.outerHTML}
                        </div>
                    `;

                    modalContent.innerHTML = modalHtml;
                    announcementModal.classList.add('active');
                });
            });

            // Close modal
            modalClose.addEventListener('click', function() {
                announcementModal.classList.remove('active');
            });

            modalCloseBtn.addEventListener('click', function() {
                announcementModal.classList.remove('active');
            });

            // Close modal when clicking outside
            announcementModal.addEventListener('click', function(e) {
                if (e.target === this) {
                    this.classList.remove('active');
                }
            });

            // Post announcement functionality with SweetAlert
            document.getElementById('post-announcement').addEventListener('click', function() {
                const title = document.getElementById('announcement-title').value;
                const category = document.getElementById('announcement-category').value;
                const content = document.getElementById('announcement-content').value;

                if (!title || !category || !content) {
                    Swal.fire({
                        icon: 'error',
                        title: 'Oops...',
                        text: 'Please fill in all required fields!',
                        confirmButtonColor: '#3a7bd5'
                    });
                    return;
                }

                // Here you would typically send the data to a server
                Swal.fire({
                    icon: 'success',
                    title: 'Success!',
                    text: 'Announcement posted successfully!',
                    confirmButtonColor: '#3a7bd5',
                    timer: 2000,
                    timerProgressBar: true,
                    position: 'bottom-end',
                    toast: true
                });

                // Create new announcement and prepend it to the list
                const announcementsList = document.getElementById('announcements-list');
                const newAnnouncement = createAnnouncementElement(title, category, content);
                announcementsList.insertBefore(newAnnouncement, announcementsList.firstChild);

                // Reset form
                document.getElementById('announcement-title').value = '';
                document.getElementById('announcement-category').value = '';
                document.getElementById('announcement-content').value = '';
                document.getElementById('file-name').textContent = '';
                document.getElementById('file-attachment').value = '';
                scheduledIndicator.classList.remove('active');
            });

            // Helper function to create new announcement element
            function createAnnouncementElement(title, category, content) {
                const announcement = document.createElement('div');
                announcement.className = `announcement ${category}`;
                announcement.dataset.category = category;

                // Get current date
                const now = new Date();
                const dateStr = now.toLocaleDateString('en-US', {
                    year: 'numeric',
                    month: 'long',
                    day: 'numeric'
                });

                // Create announcement HTML
                announcement.innerHTML = `
                    <div class="announcement-header">
                        <div>
                            <h3>${title}</h3>
                        </div>
                        <div class="announcement-options">
                            <button class="options-btn">
                                <i class="fas fa-ellipsis-v"></i>
                            </button>
                        </div>
                    </div>

                    <div class="announcement-meta">
                        <div class="meta-item">
                            <i class="far fa-calendar"></i>
                            ${dateStr}
                        </div>
                        <div class="meta-item">
                            <i class="fas fa-tag"></i>
                            ${category.charAt(0).toUpperCase() + category.slice(1)}
                        </div>
                        <div class="meta-item">
                            <i class="fas fa-map-marker-alt"></i>
                            All Residents
                        </div>
                    </div>

                    <div class="announcement-author">
                        <img src="/Images/bois.png" alt="Author Avatar">
                        <div class="author-info">
                            <h4>Officer Name</h4>
                            <p>Community Manager</p>
                        </div>
                    </div>

                    <div class="announcement-content">
                        <p>${content}</p>
                    </div>

                    <div class="announcement-actions">
                        <div class="read-more">Read More</div>
                    </div>
                `;

                // Add event listener to the new "Read More" button
                announcement.querySelector('.read-more').addEventListener('click', function() {
                    const title = announcement.querySelector('h3').textContent;
                    const content = announcement.querySelector('.announcement-content').innerHTML;
                    const metaItems = announcement.querySelectorAll('.meta-item');
                    const author = announcement.querySelector('.author-info').cloneNode(true);

                    // Build modal content
                    modalTitle.textContent = title;

                    let modalHtml = `
                        <div class="modal-meta">
                            ${Array.from(metaItems).map(item => item.outerHTML).join('')}
                        </div>
                        <div class="modal-author">
                            ${author.outerHTML}
                        </div>
                        <div class="modal-content">
                            ${content}
                        </div>
                    `;

                    modalContent.innerHTML = modalHtml;
                    announcementModal.classList.add('active');
                });

                return announcement;
            }
        });
    </script>
