@page
@model Vista_Subdivision.Pages.Officer.AnnouncementModel
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Vista Community Portal</title>
    <style>
        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
        }

        body {
            display: flex;
            background-color: #f5f5f5;
        }

        /* Sidebar */
        .sidebar {
            width: 339px;
            background-color: white;
            height: 200vh;
            padding: 20px;
            border-right: 1px solid #e0e0e0;
        }

        .logo {
            display: flex;
            align-items: center;
            margin-bottom: 40px;
        }

            .logo img {
                width: 40px;
                height: 40px;
                margin-right: 10px;
            }

            .logo span {
                font-size: 24px;
                font-weight: 600;
                color: #333;
            }

        .menu-item {
            display: flex;
            align-items: center;
            padding: 12px 15px;
            margin-bottom: 8px;
            border-radius: 5px;
            color: #666;
            cursor: pointer;
        }

            .menu-item.active {
                background-color: #d4bd8a;
                color: white;
            }

            .menu-item svg {
                margin-right: 10px;
                width: 20px;
                height: 20px;
            }

        /* Main Content */
        .main-content {
            flex: 1;
            padding: 20px;
            max-width: 1000px;
            margin: 0 auto;
        }

        .announcements-header {
            margin-bottom: 20px;
        }

            .announcements-header h2 {
                font-size: 24px;
                margin-bottom: 15px;
            }

        .filter-tabs {
            display: flex;
            gap: 10px;
            margin-bottom: 20px;
        }

        .tab {
            padding: 8px 16px;
            border-radius: 20px;
            background-color: #e0e0e0;
            color: #666;
            font-size: 14px;
            cursor: pointer;
        }

            .tab.active {
                background-color: #d4bd8a;
                color: white;
            }

        /* Create Announcement */
        .create-post {
            background-color: white;
            border-radius: 10px;
            padding: 20px;
            margin-bottom: 20px;
            box-shadow: 0 2px 5px rgba(0,0,0,0.05);
        }

        .post-header {
            display: flex;
            align-items: center;
            margin-bottom: 15px;
        }

            .post-header img {
                width: 50px;
                height: 50px;
                border-radius: 50%;
                margin-right: 15px;
            }

        .post-form {
            width: auto;
            margin-left: 65px;
        }

            .post-form input {
                width: 782px;
                padding: 8px 15px;
                border: 1px solid #ddd;
                border-radius: 5px;
                margin-bottom: 15px;
            }

            .post-form textarea {
                width: 100%;
                height: 100px;
                padding: 15px;
                border: 1px solid #ddd;
                border-radius: 5px;
                resize: none;
                margin-bottom: 15px;
            }

        .post-actions {
            display: flex;
            justify-content: flex-end;
        }

        .post-button {
            padding: 8px 24px;
            background-color: #d4bd8a;
            color: white;
            border: none;
            border-radius: 5px;
            cursor: pointer;
        }

        /* Announcements */
        .announcement {
            background-color: white;
            border-radius: 10px;
            padding: 20px;
            margin-bottom: 20px;
            box-shadow: 0 2px 5px rgba(0,0,0,0.05);
        }

        .announcement-header {
            margin-bottom: 10px;
        }

            .announcement-header h3 {
                font-size: 18px;
                margin-bottom: 5px;
            }

        .announcement-meta {
            display: flex;
            align-items: center;
            color: #777;
            font-size: 13px;
            margin-bottom: 15px;
        }

            .announcement-meta span {
                margin-right: 15px;
                display: flex;
                align-items: center;
            }

                .announcement-meta span:before {
                    content: "•";
                    margin-right: 15px;
                }

                .announcement-meta span:first-child:before {
                    display: none;
                }

        .announcement-author {
            display: flex;
            align-items: center;
        }

            .announcement-author img {
                width: 40px;
                height: 40px;
                border-radius: 50%;
                margin-right: 15px;
            }

        .announcement-content {
            margin-bottom: 15px;
        }

        .announcement-attachments {
            margin-bottom: 15px;
        }

        .attachment {
            display: inline-block;
            background-color: #f0f0f0;
            padding: 5px 10px;
            border-radius: 5px;
            font-size: 13px;
            color: #555;
        }

        .read-more {
            color: #777;
            font-size: 14px;
            cursor: pointer;
        }

        /* Right Panel */
        .right-panel {
            width: 454px;
            padding: 20px;
            background-color: white;
        }

        .user-profile {
            display: flex;
            align-items: center;
            justify-content: flex-end;
            margin-bottom: 30px;
        }

        .user-info {
            text-align: right;
            margin-right: 10px;
        }

            .user-info h4 {
                font-size: 14px;
            }

            .user-info p {
                font-size: 12px;
                color: #777;
            }

        .user-profile img {
            width: 40px;
            height: 40px;
            border-radius: 50%;
        }

        .activity-panel h3 {
            margin-bottom: 20px;
            font-size: 18px;
        }

        .activity-item {
            display: flex;
            margin-bottom: 20px;
        }

        .activity-timeline {
            display: flex;
            flex-direction: column;
            align-items: center;
            margin-right: 15px;
        }

        .activity-avatar {
            width: 35px;
            height: 35px;
            border-radius: 50%;
            margin-bottom: 5px;
        }

        .timeline-line {
            width: 2px;
            flex: 1;
            background-color: #ddd;
        }

        .activity-content {
            flex: 1;
        }

            .activity-content p {
                margin-bottom: 5px;
                font-size: 14px;
            }

            .activity-content .highlight {
                font-weight: 600;
            }

            .activity-content .timestamp {
                font-size: 12px;
                color: #777;
            }

        .notification-bell, .settings-icon {
            width: 24px;
            height: 24px;
            margin-right: 15px;
            cursor: pointer;
        }
    </style>
</head>
