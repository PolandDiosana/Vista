@page
@model Vista_Subdivision.Pages.homeOwner.FeedbackAndSurveyModel
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Feedback and Survery - Vista</title>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
    <link rel="stylesheet" href="~/css/feedback.css">
</head>
<body>
    <div class="sidebar">
        <div class="logo">
            <img src="/Images/logo.png" alt="Vista Logo">
            <h2>vista.</h2>
        </div>

        <a href="#" class="menu-item">
            <i class="fa-solid fa-th-large"></i>
            Dashboard
        </a>

        <a href="#" class="menu-item">
            <i class="fa-solid fa-bullhorn"></i>
            Announcements
        </a>

        <a href="#" class="menu-item">
            <i class="fa-solid fa-file-invoice-dollar"></i>
            Billing & Payments
        </a>

        <a href="#" class="menu-item">
            <i class="fa-solid fa-plus-square"></i>
            Facility Reservation
        </a>

        <a href="#" class="menu-item">
            <i class="fa-solid fa-concierge-bell"></i>
            Service Request
        </a>

        <a href="#" class="menu-item">
            <i class="fa-solid fa-file-alt"></i>
            Documents
        </a>

        <a href="#" class="menu-item">
            <i class="fa-solid fa-calendar-alt"></i>
            Events Calendar
        </a>

        <a href="#" class="menu-item active">
            <i class="fa-solid fa-comment-alt"></i>
            Polls and Survey
        </a>
    </div>

    <!-- Main Content -->
    <div class="main-content">
        <h1 class="page-title">Feedback & Surveys</h1>

        <!-- Submit Feedback Form -->
        <div class="submit-feedback">
            <h2 class="card-title">Submit Feedback & Complaint</h2>

            <div class="form-group">
                <label for="title">Title</label>
                <input type="text" id="title" class="form-control">
            </div>

            <div class="form-group">
                <label for="description">Description</label>
                <textarea id="description" class="form-control"></textarea>
            </div>

            <div class="btn-container">
                <button class="btn">Submit</button>
            </div>
        </div>

        <!-- Two Column Section -->
        <div class="content-row">
            <!-- Feedback History Column -->
            <div class="content-column">
                <h2 class="card-title">My Feedback & Complaint History</h2>
                <div class="history-divider"></div>

                <div class="feedback-item">
                    <div class="feedback-title">Water Leakage Issue</div>
                    <div class="feedback-status">Status: Resolved</div>
                    <div class="feedback-status">Submitted: Feb 20, 2025</div>
                </div>

                <div class="feedback-item">
                    <div class="feedback-title">Defective Street Lights</div>
                    <div class="feedback-status">Status: Pending</div>
                    <div class="feedback-status">Submitted: Feb 10, 2025</div>
                </div>

                <div class="feedback-item">
                    <div class="feedback-title">Basketball Ring</div>
                    <div class="feedback-status">Status: Resolved</div>
                    <div class="feedback-status">Submitted: Feb 1, 2025</div>
                </div>
            </div>

            <!-- Polls Column -->
            <div class="content-column">
                <h2 class="card-title">Polls and Survey</h2>

                <div class="poll-item">
                    <div class="poll-title">Community Garden Project</div>
                    <div class="poll-subtitle">Vote on the proposed garden location</div>

                    <div class="radio-option">
                        <input type="radio" name="poll1" id="poll1-a">
                        <label for="poll1-a">Location A - North park</label>
                    </div>

                    <div class="radio-option">
                        <input type="radio" name="poll1" id="poll1-b">
                        <label for="poll1-b">Location B - South park</label>
                    </div>

                    <div class="poll-footer">
                        <div>Expires on April 15, 2025</div>
                        <button class="vote-btn">Submit Vote</button>
                    </div>
                </div>

                <div class="poll-item">
                    <div class="poll-title">Community Garden Project</div>
                    <div class="poll-subtitle">Vote on the proposed garden location</div>

                    <div class="radio-option">
                        <input type="radio" name="poll2" id="poll2-a">
                        <label for="poll2-a">Location A - North park</label>
                    </div>

                    <div class="radio-option">
                        <input type="radio" name="poll2" id="poll2-b">
                        <label for="poll2-b">Location B - South park</label>
                    </div>

                    <div class="poll-footer">
                        <div>Expires on April 20, 2025</div>
                        <button class="vote-btn">Submit Vote</button>
                    </div>
                </div>
            </div>
        </div>
    </div>
</body>
</html>
