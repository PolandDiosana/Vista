@page
@model Vista_Subdivision.Pages.Register2Model
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Property Details</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="~/css/customfonts.css" rel="stylesheet" />
    <style>
        .navbar, .footer {
            display: none !important;
        }
        body {
            display: flex;
            justify-content: center;
            align-items: center;
            height: 100vh;
            background-color: #f8f9fa;
            font-family: besley;
        }

        .container-wrapper {
            margin-top: 5%;
            display: flex;
            flex-direction: column;
            width: 150vh;
            max-width: 1100px;
            background: #fff;
            border-radius: 10px;
            box-shadow: 0 4px 10px rgba(0, 0, 0, 0.1);
            overflow: hidden;
            padding: 20px;
            position: relative;
        }

        .content-wrapper {
            display: flex;
        }

        .left-column {
            padding: 30px;
            background: #fff;
        }

        .left-column .title {
            font-family: 'Besley-ExtraBold';
            font-size: 30px;
        }

        .form-label {
            font-family: 'Poppins-SemiBold';
            font-size: 12px;
        }

        .form-control {
            font-family: 'Poppins-Regular';
            font-size: 12px;
            border: 1px solid #707070;
            border-radius: 10px;
        }

        .form-select {
            font-family: 'Poppins-Regular';
            font-size: 12px;
            border: 1px solid #707070;
            border-radius: 10px;
        }

        .right-column {
            width: 55%;
            margin-left: 5%;
            background: url('/Images/neighborhood3.jpg') no-repeat center center;
            background-size: cover;
        }

        /* Progress Bar */
        .progress-container {
            width: 110%;
            margin-left: -5%;
            padding: 20px 0;
        }

        .progress {
            height: 8px;
            width: 100%;
            background-color: #e0e0e0;
            border-radius: 10px;
            overflow: hidden;
        }
        .phase {
            color: rgba(0, 0, 0, 0.41);
        }

        .field-divider {
            border: 10px;
            height: 1px;
            background-color: #c6a57c;
            margin: 20px 0;
        }
        .progress-bar {
            width: 33%; /* Adjust based on progress */
            height: 100%;
            background-color: #c5a47e;
        }

        /* Bottom Navigation */
        .bottom-nav {
            display: flex;
            justify-content: space-between;
            align-items: center;
            margin-top: 10px;
        }

        .back-btn {
            font-family: 'Poppins-Bold';
            font-size: 20px;
            background: transparent;
            color: black;
            border: 1px solid #273B4A;
            color: #273B4A;
            padding: 8px 60px;
            font-size: 16px;
            border-radius: 10px;
            text-decoration: none;
        }

        .back-btn:hover {
            transition: .3s ease;
            background-color: #273B4A;
            color: #fff;
            border: 1px solid transparent;
        }

        .next-btn {
            font-family: 'Poppins-Bold';
            font-size: 20px;
            background-color: #c5a47e;
            color: white;
            border: 1px solid #c5a47e;
            padding: 8px 60px;
            font-size: 16px;
            border-radius: 10px;
            text-decoration: none;
        }

        .next-btn:hover {
            transition: .3s ease;
            border: 1px solid #c5a47e;
            background-color: transparent;
            color: #c5a47e;
        }

        h5{
            text-align: center;
            padding-bottom: 15px;
            margin-bottom: 20px;
            font-family: 'Besley-Bold';
            font-size: 18px;
        }

    </style>
</head>
<body>
    <div class="container-wrapper">
        <!-- Content -->
        <form method="post">
            @Html.AntiForgeryToken()
            <div class="content-wrapper">
                <!-- Left Column (Form) -->
                <div class="left-column">
                    <h2 class="text-center mb-4 title" style="margin-bottom: 50px;"><img src="~/Images/logo 1.png" alt="Logo" width="50"> vista.</h2>
                    <div class="row mb-3 mt-4">
                        <div class="col-md-6">
                            <label class="form-label">Lot Number</label>
                            <input asp-for="Input.LotNumber" name="Input.LotNumber" type="text" class="form-control" required>
                        </div>
                        <div class="col-md-6">
                            <label class="form-label">Block Number</label>
                            <input asp-for="Input.BlockNumber" name="Input.BlockNumber" type="text" class="form-control" required>
                        </div>
                    </div>
                    <div class="mb-3 select-wrapper">
                        <label class="form-label">House Type</label>
                        <select asp-for="Input.HouseType" name="Input.HouseType" class="form-select">
                            <option>Town House</option>
                            <option>Single Detached</option>
                            <option>Duplex</option>
                        </select>
                    </div>
                    <hr class="field-divider">
                    <h5>Address Details</h5>
                    <div class="row mb-3">
                        <div class="col-md-6">
                            <label class="form-label">Subdivision Name</label>
                            <input asp-for="Input.SubdivisionName" name="Input.SubdivisionName" type="text" class="form-control" required>
                        </div>
                        <div class="col-md-6">
                            <label class="form-label">City / Municipality</label>
                            <input asp-for="Input.CityMunicipality" name="Input.CityMunicipality" type="text" class="form-control" required>
                        </div>
                    </div>
                    <div class="row mb-3">
                        <div class="col-md-6">
                            <label class="form-label">Street Name</label>
                            <input asp-for="Input.StreetName" name="Input.StreetName" type="text" class="form-control" required>
                        </div>
                        <div class="col-md-6">
                            <label class="form-label">Province</label>
                            <input asp-for="Input.Province" name="Input.Province" type="text" class="form-control" required>
                        </div>
                    </div>
                    <div class="mb-3">
                        <label class="form-label">Phase <span class="phase">(if applicable)</span></label>
                        <input asp-for="Input.Phase" name="Input.Phase" type="text" class="form-control" required>
                    </div>
                </div>

                <!-- Right Column (Image) -->
                <div class="right-column"></div>
            </div>

            <!-- Progress Bar & Buttons -->
            <div class="progress-container">
                <div class="progress">
                    <div class="progress-bar" style="width: 100%;"></div>
                </div>
            </div>

            <!-- Bottom Navigation -->
            <div class="bottom-nav">
                <a type="button" class="back-btn" href="/Register">Back</a>
                <button type="submit" class="next-btn">Register</button>
            </div>
        </form>
    </div>
</body>
</html>
