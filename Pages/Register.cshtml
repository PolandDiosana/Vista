@page
@model Vista_Subdivision.Pages.RegisterModel
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Create an Account</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="~/css/register.css" rel="stylesheet" />
    <link href="~/css/customfonts.css" rel="stylesheet" />
</head>
<body>
    <div class="container-wrapper">
        <form method="post" asp-page="/Register" enctype="multipart/form-data" novalidate>
            @Html.AntiForgeryToken()
            <div class="container custom-container">
                <!-- Left Section -->
                <div class="left-section">
                    <div class="upload-box" onclick="document.getElementById('profileImage').click()">
                        <div class="preview-container">
                            <div class="preview-content" id="preview-text">
                                <img src="~/Images/Image_upload.png" alt="Upload Icon" class="upload-icon" />
                                <p>Upload your product image</p>
                                <p>Only PNG, JPG & JPEG format allowed</p>
                                <p>500 x 500 pixels are recommended</p>
                            </div>
                        </div>
                    </div>
                    <input type="file" name="ProfileFile" id="profileImage" accept="image/png, image/jpeg" style="display: none;" onchange="previewImage(event)" required>
                    <button type="button" class="btn upload-btn" onclick="document.getElementById('profileImage').click()">Upload Photo</button>
                    <p class="info-text">
                        <i class="bi bi-box-arrow-in-down"></i> Upload a clear, recent photo of yourself for your profile. This helps build trust and recognition.
                    </p>
                </div>

                <!-- Divider -->
                <div class="divider"></div>

                <!-- Right Section -->
                <div class="right-section">
                    <div class="logo-container">
                        <img src="~/Images/logo.png" alt="Vista Logo" class="logo">
                        <span class="logo-text">vista.</span>
                    </div>
                    <h2 class="form-title">Create an Account</h2>

                    <div class="row mb-3">
                        <div class="col">
                            <label class="form-label" >First Name</label>
                            <input asp-for="Input.FirstName" name="Input.FirstName" type="text" class="form-control" required>
                        </div>
                        <div class="col">
                            <label class="form-label" >Last Name</label>
                            <input asp-for="Input.LastName" name="Input.LastName" type="text" class="form-control" required>
                        </div>
                    </div>



                    <div class="row mb-3">
                        <div class="col">
                            <label class="form-label" >Email Address</label>
                            <input asp-for="Input.Email" name="Input.Email" type="email" class="form-control" required>
                        </div>
                        <div class="col">
                            <label class="form-label" >Phone Number</label>
                            <input asp-for="Input.PhoneNumber" name="Input.PhoneNumber" type="tel" class="form-control" required>
                        </div>
                    </div>

                    <!-- Divider -->
                    <div class="field-divider"></div>

                    <div class="row mb-3">
                        <div class="col">
                            <label class="form-label" >Username</label>
                            <input asp-for="Input.Username" name="Input.Username" type="text" class="form-control" required>
                        </div>
                        <div class="col">
                            <label class="form-label" >Password</label>
                            <input asp-for="Input.Password" name="Input.Password" type="password" class="form-control" required>
                        </div>
                    </div>
                    <div class="form-check mb-2">
                        <input type="checkbox" class="form-check-input" id="updates">
                        <label class="form-check-label" style="font-family: 'Poppins-Regular';">Send me important updates about community events and maintenance schedules.</label>
                    </div>
                    <div class="form-check mb-3">
                        <input type="checkbox" class="form-check-input">
                        <label class="form-check-label" style="font-family: 'Poppins-Regular';">Yes, I understand and agree to the Terms of Service, including the User Agreement and Privacy Policy.</label>
                    </div>
                </div>
            </div>

            <!-- Progress Bar -->
            <div class="progress-container">
                <div class="progress">
                    <div class="progress-bar" style="width: 50%;"></div>
                </div>
            </div>

            <!-- Bottom Navigation -->
            <div class="bottom-nav">
                <a class="btn back-btn" href="/LogIn">Back</a>
                <button type="submit" class="btn next-btn">Next</button>
            </div>
        </form>
    </div>
    

    <script>
        function previewImage(event) {
            var reader = new FileReader();
            reader.onload = function () {
                var output = document.getElementById('preview');
                var textContainer = document.getElementById('preview-text');

                output.src = reader.result;
                output.style.display = 'block';
                textContainer.style.display = 'none'; // Hide text & icon when image appears
            }
            if (event.target.files.length > 0) {
                reader.readAsDataURL(event.target.files[0]);
            }
        }
    </script>


</body>
</html>
