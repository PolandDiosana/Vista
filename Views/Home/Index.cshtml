    <style>
        /* Carousel Styling */
        #imageCarousel {
            max-width: 900px; /* Adjust width */
            margin: auto;
        }

        /* Image Styling */
        .carousel-item img {
            transition: all 0.5s ease-in-out;
            border-radius: 10px;
        }

        /* Center Image */
        .carousel-item .present {
            width: 50%;
            transform: scale(1.1);
            box-shadow: 0px 0px 15px rgba(0, 0, 0, 0.3);
        }

        /* Side Images */
        .carousel-item .before,
        .carousel-item .after {
            width: 25%;
            opacity: 0.5;
            filter: blur(4px);
        }

        /* Add More Space Between Images */
        .carousel-item .image-container {
            display: flex;
            justify-content: center;
            gap: 20px; /* Space between images */
        }

        /* Adjust Carousel Controls */
        .carousel-control-prev, .carousel-control-next {
            width: 5%;
        }
    </style>
</head>
