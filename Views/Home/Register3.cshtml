<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Verification</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <style>
        .navbar, .footer {
            display: none !important;
        }

        body {
            display: flex;
            justify-content: center;
            align-items: center;
            height: 100vh;
            background-color: #f8f9fa;
            font-family: 'Besley', serif;
        }

        .container-wrapper {
            display: flex;
            flex-direction: column;
            width: 100vh;
            max-width: 1200px;
            background: #fff;
            border-radius: 10px;
            box-shadow: 0 4px 10px rgba(0, 0, 0, 0.1);
            padding: 30px;
            overflow: hidden;
            margin-top: 5%;
        }

        .content-wrapper {
            display: flex;
            width: 100%;
        }

        .left-column {
            width: 55%;
            padding: 50px;
        }

        .right-column {
            width: 50%;
            background: url('/Images/register 2.jpg') no-repeat center center;
            background-size: cover;
        }

        h3, h4 {
            color: #333;
            font-weight: bold;
        }

        .upload-section {
            margin-bottom: 20px;
        }

        .upload-item {
            display: flex;
            justify-content: space-between;
            align-items: center;
            margin-bottom: 15px;
        }

        .btn-upload {
            background-color: #c5a47e;
            color: white;
            border: none;
            padding: 8px 16px;
            border-radius: 5px;
        }

            .btn-upload:hover {
                background-color: #b2926d;
            }

        /* Progress Bar */
        .progress-container {
            width: 100%;
            margin: 20px 0;
        }

        .progress {
            height: 8px;
            width: 100%;
            background-color: #e0e0e0;
            border-radius: 10px;
            overflow: hidden;
        }

        .progress-bar {
            width: 100%; /* Adjust based on progress */
            height: 100%;
            background-color: #c5a47e;
        }

        /* Bottom Navigation */
        .bottom-nav {
            display: flex;
            flex-direction: column;
            align-items: center;
            margin-top: 20px;
        }

        .file-preview {
            font-size: 10px;
        }

        .button-container {
            display: flex;
            justify-content: space-between;
            width: 100%;
            margin-top: 10px;
        }

        .btn-back {
            background: transparent;
            color: black;
            border: 1px solid black;
            padding: 10px 24px;
            font-size: 16px;
            border-radius: 5px;
        }

        .btn-register {
            background-color: #c5a47e;
            color: white;
            border: none;
            padding: 10px 24px;
            font-size: 16px;
            border-radius: 5px;
        }

            .btn-register:hover {
                background-color: #b2926d;
            }
    </style>
</head>
<body>
    <form action="" method="post" >
        <div class="container-wrapper">
            <!-- Content -->
            <div class="content-wrapper">
                <!-- Left Column (Form) -->
                <div class="left-column">
                    <h3 class="mb-4">Upload your valid documents</h3>
                    <div class="upload-section">
                        <div class="upload-item">
                            <span>Proof of Ownership</span>
                            <p id="proofPreview" class="file-preview"></p>
                            <input type="file" id="proofOfOwnership" class="file-input" hidden onchange="previewFile(event, 'proofPreview')" required>
                            <button type="button" class="btn btn-upload" onclick="document.getElementById('proofOfOwnership').click();">Upload file(s)</button>
                        </div>
                        <div class="upload-item">
                            <span>Valid ID(s)</span>
                            <p id="validIdPreview" class="file-preview"></p>
                            <input type="file" id="validId" class="file-input" hidden onchange="previewFile(event, 'validIdPreview')" required>
                            <button type="button" class="btn btn-upload" onclick="document.getElementById('validId').click();">Upload file(s)</button>
                        </div>
                        <div class="upload-item">
                            <span>Utility Bill <em>(Optional)</em></span>
                            <p id="utilityBillPreview" class="file-preview"></p>
                            <input type="file" id="utilityBill" class="file-input" hidden onchange="previewFile(event, 'utilityBillPreview')">
                            <button type="button" class="btn btn-upload" onclick="document.getElementById('utilityBill').click();">Upload file(s)</button>
                        </div>
                    </div>

                    <h4 class="mt-4">Emergency Contact Information</h4>
                    <div class="mb-3">
                        <label class="form-label">Emergency Contact Name</label>
                        <input type="text" class="form-control" required>
                    </div>
                    <div class="mb-3">
                        <label class="form-label">Relationship</label>
                        <input type="text" class="form-control" required>
                    </div>
                    <div class="mb-3">
                        <label class="form-label">Phone Number</label>
                        <input type="text" class="form-control" required>
                    </div>
                </div>
                <!-- Right Column (Image) -->
                <div class="right-column"></div>
            </div>
            <!-- Progress Bar -->
            <div class="progress-container">
                <div class="progress">
                    <div class="progress-bar"></div>
                </div>
            </div>
            <!-- Bottom Navigation -->
            <div class="bottom-nav">
                <div class="button-container">
                    <a class="btn back-btn" href="/home/register2">Next</a>
                    <button type="submit" class="btn btn-register">Register</button>
                </div>
            </div>
        </div>
    </form>

    <script>
        function previewFile(event, previewId) {
            const input = event.target;
            const preview = document.getElementById(previewId);

            if (input.files.length > 0) {
                preview.textContent = "Selected file: " + input.files[0].name;
            } else {
                preview.textContent = "";
            }
        }
    </script>

</body>
</html>
